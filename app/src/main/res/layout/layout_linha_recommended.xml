<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="32dp"
    android:layout_marginRight="26dp"
    android:layout_marginLeft="26dp">

    <ImageView
        android:id="@+id/product_recommended"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/luminaria"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$78,00"
        app:layout_constraintTop_toBottomOf="@id/product_recommended"
        app:layout_constraintStart_toStartOf="@id/product_recommended"
        android:textColor="#394a51"
        android:textSize="18sp"
        android:layout_marginTop="8dp">
    </TextView>

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/product_recommended"
        app:layout_constraintTop_toBottomOf="@id/price_text"
        android:text="Porcelain lampshade"
        android:textSize="16sp"
        android:textColor="#394a51"
        android:lineSpacingExtra="6dp"
        android:paddingEnd="14dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>